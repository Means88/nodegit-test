{
  "name": "template",
  "version": "1.0.0",
  "description": "Project created by `nmsl`",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc --build tsconfig.build.json",
    "lint": "run-s lint:prettier lint:tslint",
    "lint:prettier": "prettier-check '{src,test}/**/*.ts'",
    "lint:tslint": "tslint -t stylish -p .",
    "fix": "run-s fix:tslint fix:prettier",
    "fix:prettier": "prettier --write '{src,test}/**/*.ts'",
    "fix:tslint": "tslint --fix -t stylish -p .",
    "test": "jest",
    "test:watch": "jest --watch --notify"
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.test.ts": [
      "yarn prettier --write",
      "git add"
    ],
    "*.ts": [
      "yarn fix:tslint",
      "yarn prettier --write",
      "git add"
    ]
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jest": "^23.3.8",
    "@types/node": "^10.12.1",
    "@types/nodegit": "^0.24.6",
    "@types/sinon": "^5.0.5",
    "chai": "^4.2.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "prettier-check": "^2.0.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.4"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    }
  },
  "dependencies": {
    "nodegit": "^0.24.3"
  }
}
